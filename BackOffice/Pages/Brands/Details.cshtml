@page
@model BackOffice.Pages.Brands.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Brand Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.Country)
        </dd>
        <dt class="col-sm-2">
            Environmental rating
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.EnvironmentRating)
        </dd>
        <dt class="col-sm-2">
            Human rating
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.PeopleRating)
        </dd>
        <dt class="col-sm-2">
            Animal rating
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.AnimalRating)
        </dd>
        <dt class="col-sm-2">
            Rating description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.RatingDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.Categories)
        </dt>
        <dd class="col-sm-10">
            @string.Join(" | ", Model.Brand.Categories)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.Ranges)
        </dt>
        <dd class="col-sm-10">
            @string.Join(" | ", Model.Brand.Ranges)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Brand.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
