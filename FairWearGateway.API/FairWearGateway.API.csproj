<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <PackageId>FairWearGateway.API</PackageId>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <ExcludeFromCodeCoverage>
            <!-- Add patterns to exclude auto-generated gRPC files -->
            **/*.grpc.cs;
            **/*.proto.cs
        </ExcludeFromCodeCoverage>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Grpc.AspNetCore" Version="2.49.0" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.2.3" />
    </ItemGroup>

    <ItemGroup>
        <Protobuf Include="..\BrandAndProductDatabase.Service\Protos\BrandService.proto" GrpcServices="Client">
            <Link>Protos\BrandService.proto</Link>
        </Protobuf>
        <Protobuf Include="..\BrandAndProductDatabase.Service\Protos\ProductService.proto" GrpcServices="Client">
            <Link>Protos\ProductService.proto</Link>
        </Protobuf>
    </ItemGroup>

</Project>
