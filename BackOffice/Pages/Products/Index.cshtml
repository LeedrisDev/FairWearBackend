@page
@model BackOffice.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductEntity[0].UpcCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductEntity[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductEntity[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductEntity[0].Ranges)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductEntity[0].BrandEntity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductEntity) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UpcCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ranges)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrandEntity.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
